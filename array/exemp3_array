#include <iostream>

using namespace std; 

//protótipo
void show(int [], int);

int main()
{
    int num[] = {10, 20, 30, 40, 50};
    int size = 5;
    
    //chamada da função
    show(num, size);

    return 0;
}

//função-argumentos
void show(int num[], int size){
    for(int count = 0; count < size; count++){
        cout << "Elemento " << count + 1 << ": " << num[count] << endl;
    }
}