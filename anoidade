#include <iostream>
using namespace std;

int main() {
    
    int idade, anoAtual, anoNascimento;
    
    cout << "Entre com a sua idade: ";
    cin >> idade;
    
    cout << "Entre com o ano atual: ";
    cin >> anoAtual;
    
    anoNascimento = (anoAtual - idade) - 1;
    
    cout << "Seu ano de nascimento Ã©: " << anoNascimento;
    
    return 0;
}